<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.uniquindio.multimodal.PopVendAproController"
      spacing="10" alignment="CENTER" style="-fx-background-color: white; -fx-padding: 20;">

    <Label text="Aprobar Nuevos Vendedores" style="-fx-font-size: 18; -fx-font-weight: bold;"/>

    <TableView fx:id="vendedoresTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" prefWidth="50"/>
            <TableColumn fx:id="nombreColumn" text="Nombre" prefWidth="150"/>
            <TableColumn fx:id="emailColumn" text="Email" prefWidth="200"/>
            <TableColumn fx:id="estadoColumn" text="Estado" prefWidth="100"/>
        </columns>
    </TableView>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button fx:id="btnAprobar" text="Aprobar Seleccionados" onAction="#aprobarSeleccionados"
                style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-cursor: hand"/>
        <Button fx:id="btnRechazar" text="Rechazar Seleccionados" onAction="#rechazarSeleccionados"
                style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-cursor: hand"/>
        <Button fx:id="btnCerrar" text="Cerrar" onAction="#cerrarPopup"
                style="-fx-background-color: #95a5a6; -fx-cursor: hand"/>
    </HBox>

</VBox>